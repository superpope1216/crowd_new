<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>crowd</groupId>
		<artifactId>crowd.root</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../crowd.root</relativePath>
	</parent>
	<artifactId>crowd.messages</artifactId>
	<packaging>jar</packaging>
	<name>crowd.messages</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>
		<dependency>
			<groupId>crowd</groupId>
			<artifactId>crowd.entity</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>crowd</groupId>
			<artifactId>crowd.service</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>crowd</groupId>
			<artifactId>crowd.common</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	 <build>
		<finalName>crowd-message</finalName>
		<resources>
			<resource>
				<!--directory: 资源所在的位置 -->
				<directory>src/main/resources</directory>
				<!--filtering: 是否替换资源中的属性placehold -->
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.6</version>
			</plugin>
		</plugins>
	</build>
</project>
