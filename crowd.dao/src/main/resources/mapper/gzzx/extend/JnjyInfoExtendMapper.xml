<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wisedu.crowd.dao.gzzx.extend.JnjyInfoExtendMapper" >
  <resultMap id="BaseDisplayResultMap" type="com.wisedu.crowd.entity.gzzx.extend.JnjyInfoExtend"
  	extends="com.wisedu.crowd.dao.gzzx.JnjyInfoMapper.BaseResultMap">
  </resultMap>
  <sql id="Base_Column_List" >
    t_crowd_ptjy_jnjy.WID, t_crowd_ptjy_jnjy.CONTENT, t_crowd_ptjy_jnjy.FBSJ, 
    t_crowd_ptjy_jnjy.FBR, t_crowd_ptjy_jnjy.XYSJ, 
    t_crowd_ptjy_jnjy.XYR, t_crowd_ptjy_jnjy.WCSJ, 
    t_crowd_ptjy_jnjy.CLR, t_crowd_ptjy_jnjy.ZT, 
    t_crowd_ptjy_jnjy.CLYJ, t_crowd_ptjy_jnjy.JNLX
  </sql>
  <sql id="sqlWhere">
		<if test="query!=null">
			<if test='query.wid!=null and query.wid!=""'>
				AND t_crowd_ptjy_jnjy.WID=#{query.wid,jdbcType=VARCHAR}
			</if>
			<if test='query.zt!=null and query.zt!=""'>
				AND t_crowd_ptjy_jnjy.ZT=#{query.zt,jdbcType=VARCHAR}
			</if>
			<if test='query.content!=null and query.content!=""'>
				AND t_crowd_ptjy_jnjy.CONTENT LIKE
				MYCONCAT('%',#{query.content,jdbcType=VARCHAR},'%')
			</if>

		</if>
	</sql>
	<sql id="sqlOrder">
	order by 
		<choose>
			<when test="orderBy!=null">
				<foreach collection="orderBy" open=" " close=" " item="item" separator=",">
					${item}
				</foreach>
			</when>
			<otherwise>
				t_crowd_ptjy_jnjy.FBSJ DESC
			</otherwise>
		</choose>
	</sql>
	<select id="selectDisplayByCondition" resultMap="BaseDisplayResultMap"
		parameterType="com.wisedu.crowd.entity.dto.QueryCondition">
		SELECT
		<include refid="Base_Column_List" />
		,T_CROWD_SJZD_PTJYZT.lbmc as ztDisplay
		from t_crowd_ptjy_jnjy left join
		T_CROWD_SJZD_PTJYZT on
		t_crowd_ptjy_jnjy.zt=T_CROWD_SJZD_PTJYZT.lbdm
		<where>
			<include refid="sqlWhere" />
		</where>
		<include refid="sqlOrder"></include>
	</select>
</mapper>